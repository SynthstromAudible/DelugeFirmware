---
import { LinkCard as StarlightLinkCard } from "@astrojs/starlight/components"
import type { HTMLAttributes } from "astro/types"
import { withBase } from "../utils"

// Same as StarlightLinkCard props
type Props = {
  href: string
  title: string
  description?: string
} & Omit<HTMLAttributes<"a">, "title" | "href">

const { href, ...rest } = Astro.props
---

<StarlightLinkCard href={withBase(href)} {...rest} />
